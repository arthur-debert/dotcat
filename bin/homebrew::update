#! /usr/bin/env bash
#this scripts uses poet to get the checksum

package_name="$(poetry version | awk '{print $1}')"
prefix="bin/templates/dotcat-formula"
checksum_path="dist/dotcat-formula-middle"
mkdir -p "dist"
poet --single dotcat | sed '1d;$d' | sed 's/^    /  /' > ${checksum_path}
cat ${prefix}-top ${checksum_path} ${prefix}-bottom > Formula/dotcat.rb

